{
	"compilerOptions": {
		"skipLibCheck": true,
		"outDir": "./dist",
		"incremental": true,
		"allowJs": true,
		"target": "es6",
		"module": "commonjs",
		"inlineSourceMap": true,
		"inlineSources": true,
		"strict": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"jsxFactory": "Chat.h",
        "jsxFragmentFactory": "Chat.Fragment",
		"lib": [
			"es7", 
			"dom",
			"esnext"
		],
	},
	"include": [
		"./src/**/*",
			"./pokemon-showdown/sim/**/*.ts",
			"./pokemon-showdown/server/**/*.ts",
			"./pokemon-showdown/config/**/*.ts",
			"./pokemon-showdown/data/**/*.ts",
			"./pokemon-showdown/lib/**/*.ts"

	]
}
